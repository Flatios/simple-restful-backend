{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["ES6"],
    "target": "ES6",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "src",

    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "pretty": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
